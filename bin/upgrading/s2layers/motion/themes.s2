#NEWLAYER: motion/bluemotion
layerinfo "type" = "theme";
layerinfo "name" = "Blue Motion";
layerinfo "redist_uniq" = "motion/bluemotion";
layerinfo "author_name" = "wiring";

set theme_authors = [ { "name" => "wiring", "type" => "user" } ];
set layout_resources = [ { "name" => "Wordpress Motion", "url" => "http://www.webdesigncompany.net/motion/" } ];


