{
    "<tr>";
    if ($.pre_empty) { "<td colspan='$.pre_empty' class='weekday_empty'>&nbsp;</td>"; }
    foreach var YearDay d ($.days) {
        """<td valign="top" class="calendar_day"><span class="day">$d.day</a><div style="text-align: center">""";
