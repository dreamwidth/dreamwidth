    }

.module-calendar td.entry-day a:active {
    color: $*color_calendar_link_active;
    }

.module-search .search-box {
    margin-right: 2px;
    }

/* Contextual Pop-ups
***************************************************************************/

.ContextualPopup {
    background: $*color_entry_background;
    border: 1px solid $*color_entry_title !important;
