    width: 50%;
}

.icon-image {
    display: inline;
    float: left;
    margin-right: 1em;
    min-width: 100px;
}

.icon-info {
    overflow: auto;
    vertical-align: bottom;
    word-wrap: break-word;
}

.icon-info .label,
