use v5.10;
use strict;

BEGIN {
    require "$ENV{LJHOME}/cgi-bin/ljlib.pl";
}

use DW::TaskQueue;

DW::TaskQueue->start_work(
    'DW::Task::SupportNotify',
    message_timeout_secs => 60,
    exit_after_secs      => 300 + int( rand() * 600 ),
    exit_after_messages  => 100,
);
