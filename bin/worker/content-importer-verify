use strict;
BEGIN {
    require "$ENV{LJHOME}/cgi-bin/ljlib.pl";
}

use LJ::Worker::TheSchwartz;
use DW::Worker::ContentImporter::LiveJournal::Verify;

schwartz_decl( "DW::Worker::ContentImporter::LiveJournal::Verify" );

$0 = 'content-importer [bored]';

schwartz_work();
