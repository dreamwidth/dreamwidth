use strict;
use lib "$ENV{LJHOME}/extlib/lib/perl5";
use lib "$ENV{LJHOME}/cgi-bin";
BEGIN {
    require 'ljlib.pl';
}

use LJ::Worker::TheSchwartz;
use DW::Worker::EmbedWorker;

schwartz_decl( $_ )
    foreach (DW::Worker::EmbedWorker->schwartz_capabilities);

schwartz_work(); # Never returns.
