.comment-wrapper {padding: 0;}

.comment-management-links ul, .comment-interaction-links ul { margin: 0; padding: 0; list-style: none; }

.comment-management-links li, .comment-interaction-links li { display: inline; }

.talkform {
    padding: 20px;
