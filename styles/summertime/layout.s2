/* Content Containers
******************************/

#content {
    clear: both;
    margin: 0 15px;
}

.page-entry #primary,
.page-reply #primary,
.page-tags #primary,
.page-icons #primary {
    margin-bottom: 40px;
    margin-top: 40px;
    padding: 1.4em 0;
    }

#primary > .inner:first-child { padding: 0; }

#secondary-container {
    background-color: $*color_module_top_background;
    border-radius: 0 0 20px 20px;
    box-shadow: 3px 3px 3px $*color_module_top_background_shadow;
