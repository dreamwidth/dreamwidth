}

.icon-image img:hover { border: 1px solid; }

.icon-info { min-height: 100px; }

.icon-info span { font-style: italic; }

.icon-info .default { font-weight: bold; }

.icon-keywords ul { margin: 0; }

.icon-keywords ul li { padding: 0; }

