    }

/* Other Pages
******************************/

.month,
.tags-container,
.icons-container {
    $entry_background
    border-radius: 20px 20px;
    box-shadow: 3px 3px 5px $*color_entry_background_shadow;
    $entry_colors
    padding: 25px;
    }

.month { margin-bottom: 25px; }

.month .month {
