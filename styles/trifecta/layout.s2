    float: left;
}

""";
    } elseif($*userpics_position == "right") {
$userpic_css = $userpic_css + """
.entry .header,
.entry-poster,
.entry-content,
.entry .metadata,
.entry .footer {
    margin-right: $entry_margin;
}

.comment .header,
.full .comment .poster,
