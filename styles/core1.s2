function TagsPage::print_body
{
    print safe "<h2>$*text_tags_page_header</h2><ul class='ljtaglist'>";

    foreach var TagDetail td ($.tags) {
        var string uses = get_plural_phrase($td.use_count, "text_tag_uses");
