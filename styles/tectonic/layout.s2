    var string entry_margin = "";
    if ( $*entry_userpic_style == "" ) { $entry_margin = "145px"; }
    elseif ( $*entry_userpic_style == "small" ) { $entry_margin = "120px"; }
    elseif ( $*entry_userpic_style == "smaller" ) { $entry_margin = "95px"; }

    var string comment_margin = "";
