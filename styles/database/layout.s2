                </div><!-- end content>inner -->
            </div> <!-- end content -->
            <div id="footer">
                <div class="inner">
                    """;
                    if ( $*layout_type->contains("one") or $*layout_type->contains("two") ) {
                        """
                        <div id="tertiary"><div class="inner">
                            """;
                            $this->print_module_section("two");
