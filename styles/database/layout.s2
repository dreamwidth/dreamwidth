function RecentPage::view_title() : string {
    if ($.filter_active) {
        if ($.filter_tags) {
            return $*text_default_separator + $*text_view_recent_tagged + $.filter_name;
        } else {
            return $*text_default_separator + "(" + $.filter_name + ")";
        }
    }
    else {
