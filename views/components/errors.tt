[%- UNLESS style.defined; style = 'alert'; END -%]

[%# errors are instances of DW::FormErrors %]
[%- IF errors.exist -%]
    [%- FOREACH err = errors.get_all -%]
        <div class="alert-box [% style %] radius">[%- err.message -%]</div>
    [%- END -%]
[%- END -%]

