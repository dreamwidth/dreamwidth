<?_code # -*-bml-*-
{
    use strict;
    use vars qw(%GET);
    use LJ::JSON;

    my $control_strip;
    my $user = $GET{'user'};
    if (defined $user) {
        unless (defined LJ::get_active_journal()) {
            LJ::set_active_journal(LJ::load_user($user));
        }
        $control_strip = LJ::control_strip( user => $user, host => $GET{host}, uri => $GET{uri}, args => $GET{args}, view => $GET{view} );
    }

    sleep 1 if $LJ::IS_DEV_SERVER;

    return to_json( { control_strip => $control_strip } );
}
_code?>
